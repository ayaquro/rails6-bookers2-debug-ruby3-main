<!--検索対象モデルがUserの時 -->
<% if @range == "User" %>
<h2>User search for "  "</h2>
  <table class='table'>
    <thead>
    <tr>
      <th colspan="1"></th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <% else %>
  <h2>Books search for "  "</h2>
  <table class='table'>
    <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  <% end %>
</table>
    
        
    
  
